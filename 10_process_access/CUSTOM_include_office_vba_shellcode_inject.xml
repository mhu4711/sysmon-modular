<Sysmon schemaversion="4.30">
	<EventFiltering>
		<RuleGroup name="" groupRelation="or">
			<ProcessAccess onmatch="include">
				<!-- Detects a process access to verclsid.exe that injects shellcode from a Microsoft Office application / VBA macro -->
				<!-- Ref: https://raw.githubusercontent.com/Neo23x0/sigma/master/rules/windows/sysmon/sysmon_malware_verclsid_shellcode.yml -->
				<Rule groupRelation="and">
					<TargetImage condition="end with">\verclsid.exe</TargetImage>
					<GrantedAccess>0x1FFFFF</GrantedAccess>
					<CallTrace condition="contains">|UNKNOWN</CallTrace>
				</Rule>
			</ProcessAccess>
		</RuleGroup>
	</EventFiltering>
</Sysmon>
